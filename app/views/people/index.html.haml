%h1 Our People
.ui.field
	= button_to "Add Person", new_person_path, method: :get, class: "ui purple button "
-inactive = []
- @people.each do |peep|
	-if peep.active
		.ui.list.relaxed
		.person[peep]= render partial: "person", locals: {person: peep, formal: false, recd_button: false}
	-else
		-inactive.push peep
%h3 Inactive
-inactive.each do |peep|
	.ui.list.relaxed
	.person[peep]= render partial: "person", locals: {person: peep, formal: false, recd_button: false}